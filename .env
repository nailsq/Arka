PORT=3000

# Admin credentials (fallback login/password)
ADMIN_LOGIN=admin
ADMIN_PASSWORD=admin123

# Admin Telegram IDs (comma-separated, users with these IDs get admin access)
ADMIN_TELEGRAM_IDS=6769165941

# Telegram Bot Token (for initData validation)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Payment provider: "test" | "yookassa" | "tinkoff"
PAYMENT_PROVIDER=test

# YooKassa (if PAYMENT_PROVIDER=yookassa)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# Tinkoff (if PAYMENT_PROVIDER=tinkoff)
TINKOFF_TERMINAL_KEY=
TINKOFF_SECRET_KEY=

# Public URL for webhooks
PUBLIC_URL=http://localhost:3000

# === GITHUB BACKUP (for persistent storage on hosting) ===
# 1. Go to https://github.com/settings/tokens
# 2. Generate new token (classic) → select "gist" scope → copy token
# 3. Go to https://gist.github.com → create secret gist (any content) → copy ID from URL
GITHUB_TOKEN=
GITHUB_GIST_ID=
